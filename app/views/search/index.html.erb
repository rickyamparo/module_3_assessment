<h1>Stores within 25 miles of <%= "#{params[:zipcode]}" %></h1>
<h2> There is a total of <%="#{@total}"%> Stores</h2>
<% @stores.each do |store| %>
  <ol class="store">
    <li class="name">
    Station Name: <%= store.name %>
    </li>

    <li class="distance">
    Distance from you: <%= store.distance %>
    </li>

    <li class="phone-number">
    Store Phone Number: <%= store.phone_number %>
    </li>

    <li class="store-type">
    Type of Store: <%= store.store_type %>
    </li>
    <br>
  </ol>
<% end %>
